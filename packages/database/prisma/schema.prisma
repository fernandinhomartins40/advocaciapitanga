// Prisma Schema para Advocacia Pitanga

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String
  role         Role     @default(CLIENTE)
  nome         String
  refreshToken String?
  ativo        Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  cliente          Cliente?
  advogado         Advogado?
  auditLogs        AuditLog[]
  membroEscritorio MembroEscritorio?
  documentosHistorico DocumentHistory[]
}

enum Role {
  ADMIN_ESCRITORIO
  ADVOGADO
  ASSISTENTE
  ESTAGIARIO
  CLIENTE
}

model Cliente {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Tipo de pessoa
  tipoPessoa TipoPessoa @default(FISICA)

  // Pessoa Física
  cpf            String?   @unique
  rg             String?
  orgaoEmissor   String?
  nacionalidade  String?   @default("Brasileiro(a)")
  estadoCivil    EstadoCivil?
  profissao      String?
  dataNascimento DateTime?

  // Pessoa Jurídica
  cnpj               String?   @unique
  razaoSocial        String?
  nomeFantasia       String?
  inscricaoEstadual  String?
  representanteLegal String?
  cargoRepresentante String?

  // Contato
  telefone String?
  celular  String?

  // Endereço completo
  cep         String?
  logradouro  String?
  numero      String?
  complemento String?
  bairro      String?
  cidade      String?
  uf          String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  processos          Processo[]
  documentosIA       DocumentoIA[]
  documentosProcesso DocumentoProcesso[]
}

model Advogado {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  oab          String   @unique
  telefone     String?
  escritorioId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  processos           Processo[]
  documentosIA        DocumentoIA[]
  configuracaoIA      ConfiguracaoIA?
  escritoriosAdmin    Escritorio[]       @relation("EscritorioAdmin")
  escritorioVinculado Escritorio?        @relation("EscritorioVinculo", fields: [escritorioId], references: [id], onDelete: SetNull)
  documentosProcesso  DocumentoProcesso[]
}

model Escritorio {
  id        String   @id @default(cuid())
  nome      String
  cnpj      String?  @unique
  adminId   String
  admin     Advogado @relation("EscritorioAdmin", fields: [adminId], references: [id], onDelete: Cascade)
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  membros    MembroEscritorio[]
  advogados  Advogado[]         @relation("EscritorioVinculo")

  @@index([adminId])
}

model MembroEscritorio {
  id             String    @id @default(cuid())
  escritorioId   String
  escritorio     Escritorio @relation(fields: [escritorioId], references: [id], onDelete: Cascade)
  userId         String    @unique
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Permissões individuais
  gerenciarUsuarios          Boolean @default(false)
  gerenciarTodosProcessos    Boolean @default(false)
  gerenciarProcessosProprios Boolean @default(true)
  visualizarOutrosProcessos  Boolean @default(false)
  gerenciarClientes          Boolean @default(false)
  visualizarClientes         Boolean @default(true)
  gerenciarIA                Boolean @default(false)
  configurarSistema          Boolean @default(false)
  visualizarRelatorios       Boolean @default(false)
  exportarDados              Boolean @default(false)

  ativo          Boolean   @default(true)
  dataConvite    DateTime  @default(now())
  dataAceitacao  DateTime?
  convidadoPor   String?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([escritorioId])
  @@index([userId])
}

model Processo {
  id         String   @id @default(cuid())
  numero     String   @unique
  clienteId  String
  cliente    Cliente  @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  advogadoId String
  advogado   Advogado @relation(fields: [advogadoId], references: [id], onDelete: Cascade)

  // Classificação
  tipoAcao    String?
  areaDireito String?

  // Localização Judicial
  justica   Justica?
  instancia Instancia?
  comarca   String?
  foro      String?
  vara      String?
  uf        String?

  // Informações Processuais
  objetoAcao      String?  @db.Text
  pedidoPrincipal String?  @db.Text
  valorCausa      Decimal? @db.Decimal(15, 2)
  valorHonorarios Decimal? @db.Decimal(15, 2)

  // Datas
  dataDistribuicao DateTime?
  dataInicio       DateTime  @default(now())
  proximoPrazo     DateTime?
  descricaoPrazo   String?

  // Controle
  status      StatusProcesso @default(EM_ANDAMENTO)
  prioridade  Prioridade     @default(NORMAL)
  observacoes String?        @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  partes            ParteProcessual[]
  documentos        Documento[]
  mensagens         Mensagem[]
  documentosIA      DocumentoIA[]
  consultasProjudi  ConsultaProjudi[]
  descricao         String? @db.Text
  documentosHistorico DocumentHistory[]
  documentosProcesso  DocumentoProcesso[]
}

model ParteProcessual {
  id         String   @id @default(cuid())
  processoId String
  processo   Processo @relation(fields: [processoId], references: [id], onDelete: Cascade)

  // Tipo e posição
  tipoParte  TipoParte
  tipoPessoa TipoPessoa

  // Pessoa Física
  nomeCompleto   String
  cpf            String?
  rg             String?
  orgaoEmissor   String?
  nacionalidade  String?      @default("Brasileiro(a)")
  estadoCivil    EstadoCivil?
  profissao      String?
  dataNascimento DateTime?

  // Pessoa Jurídica
  razaoSocial        String?
  nomeFantasia       String?
  cnpj               String?
  inscricaoEstadual  String?
  representanteLegal String?
  cargoRepresentante String?

  // Contato
  email    String?
  telefone String?
  celular  String?

  // Endereço
  cep         String?
  logradouro  String?
  numero      String?
  complemento String?
  bairro      String?
  cidade      String?
  uf          String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([processoId])
  @@index([tipoParte])
}

enum StatusProcesso {
  EM_ANDAMENTO
  SUSPENSO
  CONCLUIDO
  ARQUIVADO
}

enum Justica {
  ESTADUAL
  FEDERAL
  TRABALHO
  ELEITORAL
  MILITAR
}

enum Instancia {
  PRIMEIRA
  SEGUNDA
  SUPERIOR
  SUPREMO
}

enum Prioridade {
  NORMAL
  URGENTE
  MUITO_URGENTE
}

enum TipoParte {
  AUTOR
  REU
  TERCEIRO_INTERESSADO
  ASSISTENTE
  DENUNCIADO_LIDE
  CHAMADO_PROCESSO
}

enum TipoPessoa {
  FISICA
  JURIDICA
}

enum EstadoCivil {
  SOLTEIRO
  CASADO
  DIVORCIADO
  VIUVO
  UNIAO_ESTAVEL
}

model Documento {
  id         String   @id @default(cuid())
  titulo     String
  caminho    String?
  tipo       String
  tamanho    Int
  processoId String
  processo   Processo @relation(fields: [processoId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  // Biblioteca de documentos
  folderId    String?
  folder      DocumentFolder? @relation(fields: [folderId], references: [id], onDelete: SetNull)
  templateId  String?
  template    DocumentTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  status      DocumentStatus @default(DRAFT)
  conteudo    String?   @db.Text
  descricao   String?
  historico   DocumentHistory[]
}

model DocumentFolder {
  id        String   @id @default(cuid())
  nome      String
  parentId  String?
  parent    DocumentFolder? @relation("FolderChildren", fields: [parentId], references: [id], onDelete: SetNull)
  children  DocumentFolder[] @relation("FolderChildren")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  templates DocumentTemplate[]
  documentos Documento[]
}

model DocumentTemplate {
  id          String   @id @default(cuid())
  nome        String
  descricao   String?
  conteudo    String   @db.Text
  folderId    String?
  folder      DocumentFolder? @relation(fields: [folderId], references: [id], onDelete: SetNull)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  documentos          Documento[]
  documentosProcesso  DocumentoProcesso[]
}

model DocumentHistory {
  id          String          @id @default(cuid())
  documentoId String
  documento   Documento       @relation(fields: [documentoId], references: [id], onDelete: Cascade)
  processoId  String
  processo    Processo        @relation(fields: [processoId], references: [id], onDelete: Cascade)
  userId      String
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  acao        DocumentAction
  status      DocumentStatus
  detalhe     String?         @db.Text
  createdAt   DateTime        @default(now())

  @@index([documentoId])
  @@index([processoId])
  @@index([userId])
}

enum DocumentStatus {
  DRAFT
  EM_REVISAO
  FINALIZADO
  ANEXADO
}

enum DocumentAction {
  CRIACAO
  GERACAO_IA
  EDICAO
  STATUS_ATUALIZADO
  ANEXADO
}

model Mensagem {
  id         String   @id @default(cuid())
  conteudo   String
  processoId String
  processo   Processo @relation(fields: [processoId], references: [id], onDelete: Cascade)
  remetente  String
  lida       Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model AuditLog {
  id         String      @id @default(cuid())
  userId     String
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  action     AuditAction
  entityType String
  entityId   String?
  oldValue   String?
  newValue   String?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime    @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

enum AuditAction {
  EMAIL_UPDATED
  PASSWORD_UPDATED
  PROFILE_UPDATED
  LOGIN
  LOGOUT
  FAILED_LOGIN
  USUARIO_CRIADO
  USUARIO_EDITADO
  USUARIO_DESATIVADO
  USUARIO_ATIVADO
  PERMISSAO_ALTERADA
  ACESSO_NEGADO
  ESCRITORIO_CRIADO
  MEMBRO_ADICIONADO
  MEMBRO_REMOVIDO
}

model DocumentoIA {
  id                String    @id @default(cuid())
  advogadoId        String
  advogado          Advogado  @relation(fields: [advogadoId], references: [id], onDelete: Cascade)
  clienteId         String?
  cliente           Cliente?  @relation(fields: [clienteId], references: [id], onDelete: SetNull)
  processoId        String?
  processo          Processo? @relation(fields: [processoId], references: [id], onDelete: SetNull)
  tipoPeca          String
  contexto          String    @db.Text
  fundamentosLegais String?   @db.Text
  pedidos           String?   @db.Text
  partes            String?
  conteudoGerado    String    @db.Text
  titulo            String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([advogadoId])
  @@index([clienteId])
  @@index([processoId])
  @@index([createdAt])
}

model ConfiguracaoIA {
  id           String   @id @default(cuid())
  advogadoId   String   @unique
  advogado     Advogado @relation(fields: [advogadoId], references: [id], onDelete: Cascade)
  openaiApiKey String?
  modeloGPT    String   @default("gpt-4")
  cabecalho    String?  @db.Text
  rodape       String?  @db.Text
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model DocumentoProcesso {
  id              String   @id @default(cuid())
  processoId      String
  processo        Processo @relation(fields: [processoId], references: [id], onDelete: Cascade)
  clienteId       String
  cliente         Cliente  @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  advogadoId      String
  advogado        Advogado @relation(fields: [advogadoId], references: [id], onDelete: Cascade)

  templateId      String?
  template        DocumentTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)

  titulo          String
  conteudoHTML    String   @db.Text

  // Metadados
  versao          Int      @default(1)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([processoId])
  @@index([clienteId])
  @@index([advogadoId])
  @@index([createdAt])
}

model ConsultaProjudi {
  id             String   @id @default(cuid())
  processoId     String
  processo       Processo @relation(fields: [processoId], references: [id], onDelete: Cascade)

  metodo         MetodoConsulta
  status         StatusConsulta
  dadosExtraidos Json?
  erroMensagem   String?

  userId         String
  ipAddress      String?

  createdAt      DateTime @default(now())

  @@index([processoId])
  @@index([userId])
  @@index([createdAt])
  @@index([metodo])
}

enum MetodoConsulta {
  API_OFICIAL
  SCRAPING_ASSISTIDO
}

enum StatusConsulta {
  SUCESSO
  ERRO_CAPTCHA
  ERRO_CONEXAO
  ERRO_PROCESSO_NAO_ENCONTRADO
  ERRO_TIMEOUT
  ERRO_CREDENCIAIS
}
