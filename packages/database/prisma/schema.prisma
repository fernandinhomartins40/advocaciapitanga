// Prisma Schema para Advocacia Pitanga

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String
  role         Role     @default(CLIENTE)
  nome         String
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  cliente   Cliente?
  advogado  Advogado?
  auditLogs AuditLog[]
}

enum Role {
  ADVOGADO
  CLIENTE
}

model Cliente {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  cpf       String   @unique
  endereco  String?
  telefone  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  processos    Processo[]
  documentosIA DocumentoIA[]
}

model Advogado {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  oab       String   @unique
  telefone  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  processos      Processo[]
  documentosIA   DocumentoIA[]
  configuracaoIA ConfiguracaoIA?
}

model Processo {
  id         String   @id @default(cuid())
  numero     String   @unique
  clienteId  String
  cliente    Cliente  @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  advogadoId String
  advogado   Advogado @relation(fields: [advogadoId], references: [id], onDelete: Cascade)

  // Classificação
  tipoAcao    String?
  areaDireito String?

  // Localização Judicial
  justica   Justica?
  instancia Instancia?
  comarca   String?
  foro      String?
  vara      String?
  uf        String?

  // Informações Processuais
  objetoAcao      String?  @db.Text
  pedidoPrincipal String?  @db.Text
  valorCausa      Decimal? @db.Decimal(15, 2)
  valorHonorarios Decimal? @db.Decimal(15, 2)

  // Datas
  dataDistribuicao DateTime?
  dataInicio       DateTime  @default(now())
  proximoPrazo     DateTime?
  descricaoPrazo   String?

  // Controle
  status      StatusProcesso @default(EM_ANDAMENTO)
  prioridade  Prioridade     @default(NORMAL)
  observacoes String?        @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  partes       ParteProcessual[]
  documentos   Documento[]
  mensagens    Mensagem[]
  documentosIA DocumentoIA[]
}

model ParteProcessual {
  id         String   @id @default(cuid())
  processoId String
  processo   Processo @relation(fields: [processoId], references: [id], onDelete: Cascade)

  // Tipo e posição
  tipoParte  TipoParte
  tipoPessoa TipoPessoa

  // Pessoa Física
  nomeCompleto   String
  cpf            String?
  rg             String?
  orgaoEmissor   String?
  nacionalidade  String?      @default("Brasileiro(a)")
  estadoCivil    EstadoCivil?
  profissao      String?
  dataNascimento DateTime?

  // Pessoa Jurídica
  razaoSocial        String?
  nomeFantasia       String?
  cnpj               String?
  inscricaoEstadual  String?
  representanteLegal String?
  cargoRepresentante String?

  // Contato
  email    String?
  telefone String?
  celular  String?

  // Endereço
  cep         String?
  logradouro  String?
  numero      String?
  complemento String?
  bairro      String?
  cidade      String?
  uf          String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([processoId])
  @@index([tipoParte])
}

enum StatusProcesso {
  EM_ANDAMENTO
  SUSPENSO
  CONCLUIDO
  ARQUIVADO
}

enum Justica {
  ESTADUAL
  FEDERAL
  TRABALHO
  ELEITORAL
  MILITAR
}

enum Instancia {
  PRIMEIRA
  SEGUNDA
  SUPERIOR
  SUPREMO
}

enum Prioridade {
  NORMAL
  URGENTE
  MUITO_URGENTE
}

enum TipoParte {
  AUTOR
  REU
  TERCEIRO_INTERESSADO
  ASSISTENTE
  DENUNCIADO_LIDE
  CHAMADO_PROCESSO
}

enum TipoPessoa {
  FISICA
  JURIDICA
}

enum EstadoCivil {
  SOLTEIRO
  CASADO
  DIVORCIADO
  VIUVO
  UNIAO_ESTAVEL
}

model Documento {
  id         String   @id @default(cuid())
  titulo     String
  caminho    String
  tipo       String
  tamanho    Int
  processoId String
  processo   Processo @relation(fields: [processoId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}

model Mensagem {
  id         String   @id @default(cuid())
  conteudo   String
  processoId String
  processo   Processo @relation(fields: [processoId], references: [id], onDelete: Cascade)
  remetente  String
  lida       Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model AuditLog {
  id         String      @id @default(cuid())
  userId     String
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  action     AuditAction
  entityType String
  entityId   String?
  oldValue   String?
  newValue   String?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime    @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

enum AuditAction {
  EMAIL_UPDATED
  PASSWORD_UPDATED
  PROFILE_UPDATED
  LOGIN
  LOGOUT
  FAILED_LOGIN
}

model DocumentoIA {
  id                String    @id @default(cuid())
  advogadoId        String
  advogado          Advogado  @relation(fields: [advogadoId], references: [id], onDelete: Cascade)
  clienteId         String?
  cliente           Cliente?  @relation(fields: [clienteId], references: [id], onDelete: SetNull)
  processoId        String?
  processo          Processo? @relation(fields: [processoId], references: [id], onDelete: SetNull)
  tipoPeca          String
  contexto          String    @db.Text
  fundamentosLegais String?   @db.Text
  pedidos           String?   @db.Text
  partes            String?
  conteudoGerado    String    @db.Text
  titulo            String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([advogadoId])
  @@index([clienteId])
  @@index([processoId])
  @@index([createdAt])
}

model ConfiguracaoIA {
  id           String   @id @default(cuid())
  advogadoId   String   @unique
  advogado     Advogado @relation(fields: [advogadoId], references: [id], onDelete: Cascade)
  openaiApiKey String?
  modeloGPT    String   @default("gpt-4")
  cabecalho    String?  @db.Text
  rodape       String?  @db.Text
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
